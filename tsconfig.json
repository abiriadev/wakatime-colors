{
	"compilerOptions": {
		"target": "es2022",
		"module": "NodeNext",
		"declaration": true,
		"emitDeclarationOnly": true,
		"rootDir": ".",
		"outDir": "./dist",
		"paths": {
			"@/*": ["./src/*"]
		},
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
